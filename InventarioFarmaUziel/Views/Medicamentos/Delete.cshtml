@model InventarioFarmaUziel.Models.Medicamento

@{
    ViewData["Title"] = "Remover";
}

@*<h1>Delete</h1>*@

<h2>¿Está seguro que desea eliminar este medicamento?</h2>
<div>
@*    <h4>Medicamento</h4>
    <hr />*@
    <dl class="row">
        <dt class="col-sm-2">
            Nombre Medicamento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreMed)
        </dd>
        <dt class="col-sm-2">
            Elaboración
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaElab)
        </dd>
        <dt class="col-sm-2">
            Vencimiento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaVenc)
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescProd)
        </dd>
        <dt class="col-sm-2">
            Precio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            Cantidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class="col-sm-2">
            Distribuidora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Distribuidora)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdMedicamento" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a tabla</a>
    </form>
</div>
